           revision="GLES2"
           remote="nicolas"
           name="AndEngineLiveWallpaperExtension.git" />
  <project path="AndEngineTexturePackerExtension"
           revision="GLES2"
           remote="nicolas"
           name="AndEngineTexturePackerExtension.git" />
  <project path="AndEngineTest"
           revision="GLES2"
           remote="nicolas"
           name="AndEngineTest.git" />
  <project path="AndEngineTMXTiledMapExtension"
           revision="GLES2"
           remote="nicolas"
           name="AndEngineTMXTiledMapExtension.git" />
  <project path="AndEngineSVGTextureRegionExtension"
           revision="GLES2"
