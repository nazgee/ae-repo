<?xml version="1.0" encoding="UTF-8"?>
<manifest>
<!-- remotes -->
  <remote  name="gitorious"
           fetch="https://git.gitorious.org/" />
  <remote  name="github"
           fetch="https://github.com/nazgee/" />
  <remote  name="nicolas"
           fetch="https://github.com/nicolasgramlich/" />

<!-- default values -->
  <default revision="master"
           remote="gitorious" />

<!-- projects -->

<!-- eagle game core -->
  <project path="eagle"
           remote="github"
           name="eagle" />

<!-- custom andengine utils -->
  <project path="utils"
           remote="github"
           name="ae-utils" />

